//chapter 3

#include <iostream>
using namespace std;

int main()
{
	    // One way if statement
        int num = 5;
	    if (num > 0)
                cout << "Number is positive.";
	 
        // Multi way if else statement
        char ch = 'a';
	    if (ch == 'a')
                cout << "It's an alphabet.";
	    else if (ch == '1')
                cout << "Its a digit.";
	    else         cout << "It's a special character.";
	 
        // Nested if statement
        int n = 10;
	    if (n >= 1)
	{
		        if (n == 0)
                          
                  cout << "Number is 0";
		        else             cout << "Number is positive.";
		   
	}
	    else         cout << "Number is negative.";
	 
        return 0;
}
